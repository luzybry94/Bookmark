<h1>List A Book</h1>

<%= form_for @book do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title%>
  <br>
  <br>
  <%= f.label :author %>
  <%= f.text_field :author%>
  <br>
  <br>
  <%= f.label "Select a genre:" %>
  <%= f.collection_select :genre, Genre.all, :id, :name %>
  Or create a new one:
  <%= f.fields_for :genre do |g|%>
    <%= g.text_field :name%>
  <% end %>
  <br>
  <br>
  <%= f.label :condition %>
  <%= f.text_field :condition%>
  <br>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <br>
  <br>
  <%= f.submit "Submit" %>
<% end %>

